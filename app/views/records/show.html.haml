- model_class = Record
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @record.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @record.description


= link_to t('.back', :default => t("helpers.links.back")), records_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_record_path(@record), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), record_path(@record), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
