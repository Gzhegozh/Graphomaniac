%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .col-lg-6
    .field
      = f.label :name
      %br
      = f.text_field :name, :placeholder => "Enter your name", :class => "form-control"
    .field
      = f.label :alias
      %br
      = f.text_field :alias, :placeholder => "Enter your alias (optional)", :class => "form-control"
    .field
      = f.label :email
      %br
      = f.email_field :email, :placeholder => "Enter email", :class => "form-control"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br
      = f.password_field :password, autocomplete: "off",  :placeholder => "Enter password", :class => "form-control"
      %br
      %br
      = f.file_field :avatar
      %br
    .actions
      = f.submit "Sign up", :class => "btn btn-primary btn-md"
  .col-lg-6
    - if resource.avatar.url != nil
      %img{ id: 'preview', src: "#{resource.avatar.url}", class: 'col-lg-12', alt: 'Your image'}
    - else
      %img{ id: 'preview', src: 'http://www.keita-gaming.com/assets/profile/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg', class: 'col-lg-12', alt: 'Your image'}
  %br/
  - if devise_error_messages?
    .errors{:class => "alert alert-danger"}
      = devise_error_messages!
.col-lg-12
  = render "devise/shared/links"
