- if user_signed_in?
  .col-lg-11
    = form_for [@commentable, @comment] do |f|
      = f.hidden_field :parent_id
      %p
        = f.label :content, "New comment"
        %br
        = f.text_area :content, :rows => 4, class: "form-control"
      %p
        = f.submit "Post Comment", class: "btn btn-default"
