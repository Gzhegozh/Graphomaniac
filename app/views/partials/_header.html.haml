#head
  #logo
    = image_tag "logo.png", :id => "icon"
  #title
    %h2 Graphomaniac
  #sign_in_sign_up
    - if user_signed_in?
      %span
        Hello, #{current_user.name}
        = link_to 'Выйти', destroy_user_session_path, :method => :delete, :class => 'btn btn-default', :type => 'button'
    - else
      .btn-group
        = link_to 'Sign In', new_user_session_path, :class => 'btn btn-default', :type => 'button'
        = link_to 'Sign Up', new_user_registration_path, :class => 'btn btn-default', :type => 'button'